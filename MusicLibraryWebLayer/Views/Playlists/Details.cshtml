@model DomainClasses.Playlist

@{
    ViewBag.Title = "Details";
}
<div class="row">
    <h2>@Html.DisplayFor(model => model.Name)</h2>
    <h4>Details</h4>
    <dd>
       Likes: @Html.DisplayFor(model => model.Likes)
    </dd>
</div>


<div id="container">
    <div class="row">
        <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model=>model.Songs.First().Title)
            </th>
            <th>
               Artist
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs.First().Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs.First().Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs.First().Likes)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model.Songs)
        {
            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Likes)
            </td>
            </tr>
        }
            </table>
    </div>

    <div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>
</div>
