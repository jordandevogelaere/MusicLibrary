@model DomainClasses.Playlist

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div id="container">
<h4>@Html.DisplayFor(model=>model.Name)</h4>
    <div class="row">
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Likes)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Likes)
            </dd>


        </dl>
    </div>
    <div class="row">
        <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model=>model.Songs.First().Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs.First().Artist.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs.First().Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs.First().Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs.First().Likes)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model.Songs)
        {
            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Likes)
            </td>
            </tr>
        }
            </table>
    </div>

    <div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>
</div>
